pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo 'Building...'
        sh 'cd ../../../'
        sh './gradlew -p ./microservice/service/product build'
      }
    }
    stage('Test') { 
        steps {
          echo 'Testing...'
          }
          }
    stage('Deploy'){
        steps{
        load "/var/lib/jenkins/.envvars/var.groovy"
        echo 'Deploying...'
        echo 'Uploading artifact to s3...'
        sh "python3 s3.py microservice/service/product/build/distributions/product-0.6.$BUILD_NUMBER.tar ${env.BUCKET_NAME} product.tar"
        }
    }

    stage('Archive Artifacts') {
      steps {
        archiveArtifacts(fingerprint: true, artifacts: '**/*.tar')
      }
    }

  }
}

